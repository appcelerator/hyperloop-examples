<Alloy>

	<!--
	The module-attribute will result in require('xp.ui').createNavigationWindow()
	See app/lib/xp.ui.js for how we use this to emulate the iOS-only NavigationWindow for Android
	-->
	<NavigationWindow id="navWin" module="xp.ui">
		<Window title="Hyperloop Examples" onOpen="onOpen">
			<ListView onItemclick="onListViewItemclick">
				<ListSection>
					<ListItem itemId="libraries/index" platform="android,ios" title="Third-Party Libraries"/>
					<ListItem itemId="autolayout" platform="ios" title="Auto Layout"/>
					<ListItem itemId="touchid" platform="ios" title="Apple Touch ID"/>
					<ListItem itemId="httprequest" title="HTTP Request"/>
					<ListItem itemId="animateview" platform="android,ios,windows" title="View Animation"/>
					<ListItem itemId="basicinput" platform="windows" title="Basic Input"/>
					<ListItem itemId="devicecapabilities" platform="windows" title="Device Capabilities"/>
					<ListItem itemId="label" title="Styled Labels"/>
					<ListItem itemId="beacons" platform="ios" title="iBeacons"/>
					<ListItem itemId="mediaplayer" platform="android" title="Media Player"/>
					<ListItem itemId="videoplayer" title="Video Player"/>
					<ListItem itemId="drawrect" platform="android,ios,windows" title="Custom Drawing"/>
					<ListItem itemId="touches" title="Touches"/>
					<ListItem itemId="tableview" platform="ios" title="Table View"/>
					<ListItem itemId="collectionview" platform="ios" title="Collection View"/>
					<ListItem itemId="bottomnavigation" platform="android" title="Bottom Navigation View"/>
					<ListItem itemId="nativelayout" platform="android" title="Native Layout (XML)"/>
					<ListItem itemId="alert" title="Dialogs"/>
					<ListItem itemId="xib" platform="ios" title="Interface Builder UI"/>
					<ListItem itemId="donutchart" platform="android,ios" title="Donut Chart"/>
					<ListItem itemId="shapes" platform="ios" title="Shapes &amp; Animation"/>
					<ListItem itemId="tinder" platform="ios" title="Tinder UI"/>
					<ListItem itemId="gravity" platform="ios" title="Gravity"/>
					<ListItem itemId="snackbar" platform="android" title="Snackbar"/>
					<ListItem itemId="blur" platform="android,ios" title="Blur"/>
					<ListItem itemId="sizefill" platform="ios" title="FILL vs SIZE"/>
					<ListItem itemId="progress" platform="android" title="Circular Progress"/>
					<ListItem itemId="wkwebview" platform="ios" title="WebView (WKWebView)"/>
					<ListItem itemId="button" title="Button"/>
					<ListItem itemId="collections" platform="windows" title="Generic Collections"/>
				</ListSection>
			</ListView>
		</Window>

	</NavigationWindow>
</Alloy>
